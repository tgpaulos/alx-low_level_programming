# Makefile

# Compiler
CC := gcc

CFLAGS := -Wall -Werror -Wextra -pedantic

RM := rm -f

SRC := $(wildcard *.c)

OBJ := $(SRC:.c=.o)

NAME := school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	-$(RM) *~ *# $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
